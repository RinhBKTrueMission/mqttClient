<Page x:Class="WPF_login.Views.Pages.Notes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_login.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">


    <Grid>
        <DataGrid Name = "dataGrid" AlternatingRowBackground = "LightBlue" 
         AlternationCount = "2" AutoGenerateColumns = "False" Width="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header = "Id" Binding = "{Binding Id}" />
                <DataGridTextColumn Header = "Chức năng" Binding = "{Binding function}" />
                <DataGridTextColumn Header = "Vị trí" Binding = "{Binding location}" />
                <DataGridTextColumn Header = "Trạng Thái" Binding = "{Binding status}" />
                <DataGridTextColumn  />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
